<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeBook"
        xmlns:UserCard="clr-namespace:UserCard;assembly=UserCard" x:Class="EmployeeBook.EmployeeCard"
        mc:Ignorable="d"
        Title="Сотрудник" Height="400" Width="700" WindowStartupLocation="CenterOwner" MinWidth="600" MinHeight="360">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <UserCard:UserCard x:Name="UserCardControl" Height="Auto" Margin="10,10,10,45"/>
        <Button x:Name="btnClose" Content="Отмена" Margin="0,0,10,10" Click="btnClose_Click" HorizontalAlignment="Right" Width="90" Height="30" VerticalAlignment="Bottom"/>
        <Button x:Name="btnSave" Content="Сохранить" Margin="0,0,105,10" Click="btnSave_Click" HorizontalAlignment="Right" Width="90" Height="30" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
